<script>
const viewDetailsButtons = document.querySelectorAll('[id^="viewDetails"]');

viewDetailsButtons.forEach(button => {
    button.addEventListener('click', (event) => {
        event.preventDefault();
        const productId = button.id.replace('viewDetails', '');
        fetch(`/admin/adminViewDetails/${productId}`, {
            method: 'get',
        })
        .then(response => {
            if (response.ok) {  
                // replace the following alertify line with your desired action after successful response
                alertify.success('Details fetched successfully.');
            } else {
                alertify.error('Failed to fetch details.');
            }
        })
        .catch(error => {
            alertify.error('Failed to fetch details.');
            console.error(error);
        });
    });
});
</script>

