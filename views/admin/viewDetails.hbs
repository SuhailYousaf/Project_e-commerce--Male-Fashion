<div class="container">
    <div class="row tm-content-row tm-mt-big">
        <div class="col-xl-12 col-lg-12 tm-md-12 tm-sm-12 tm-block-col">
             {{!-- <div class="container py-5 h-100"> --}}
            {{!-- <div class="row d-flex justify-content-center align-items-center h-100"> --}}
                {{!-- <div class="col-lg-10 col-xl-8"> --}}
                    <div class="card" style="border-radius: 10px">
                        <div class="card-header px-4 py-5" style="background-color: rgb(0, 0, 0);">
                          <h5 class="text-muted mb-0 text-center" style="font-size: 2.2em;">Order Details!</h5>

                        </div>
                        {{#each orders}}
                         
                                        
                        <div class="card-body p-4"> 
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                
                               <p class="small text-muted mb-0" style="font-size: 1.2em; font-weight: bold;">Order Details of: {{userName}}</p>

                            </div>
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <p class="lead fw-normal mb-0" style="color: #ffffff;">Receipt</p>
        
                                <p class="small text-muted mb-0">Order Id : {{_id}}</p>
                            </div>
                            {{#each products}}
                            <div class="card shadow-0 border mb-4">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-2">
                                            <img src="{{product.images.[0]}}"
                                                class="img-fluid" alt="Phone">
                                        </div>
                                        
                                        <div
                                        
                                            class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                            <p class="text-muted mb-0">{{product.name}}</p>
                                        </div>
                                        
                                        <div
                                            class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                            <p class="text-muted mb-0 small">{{product.category}}</p>
                                        </div>
                                        <div
                                            class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                            <p class="text-muted mb-0 small">Qty: {{quantity}}</p>
                                        </div>
                                        <div
                                            class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                            <p class="text-muted mb-0 small">₹{{product.price}}</p>
                                        </div>
                                        
                                        {{/each}}
                                    </div>
                                    <hr class="mb-4" <div class="row d-flex align-items-center">
                                    <div class="col-md-10">
                                       {{!-- <div
                                            class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                            <p class="text-muted mb-0 small">Address:
                                               
                                               address: {{shippingAddress.address}}
                    
                                               state: {{shippingAddress.state}}
                                               postCode: {{shippingAddress.postCode}}
                                               type: {{shippingAddress.type}}
                                               phone no: {{shippingAddress.phone}}
                                            </p>
                                        </div> --}}
                                        <div class="d-flex">
                                            <p class="text-muted mt-1 mb-0 small ms-xl-5">Order Status: {{status}}</p>
                                            {{!-- <p class="text-muted mt-1 mb-0 small ms-xl-5">Delivered</p> --}}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                      
                        <div class="container">


                            <div class="d-flex justify-content-between pt-2">
                                <p class="fw-bold mb-0">Order Details</p>
                                <p class="text-muted mb-0"><span class="fw-bold me-4">Total</span> ₹{{total}}</p>
                            </div>
                            
                                      
                                        <div class="d-flex justify-content-between pt-2">
                                <p class="text-muted mb-0">Address Details : {{shippingAddress.address}}  <br>State: {{shippingAddress.state}} 
                                    <br>  Post Code: {{shippingAddress.postCode}}
                                    <br>  Phone Number: {{shippingAddress.phone}}
                                </p>
                            
                            </div>

                            <div class="d-flex justify-content-between pt-2">
                                <p class="text-muted mb-0">Order Status : {{status}}</p>
                                <p class="text-muted mb-0"><span class="fw-bold me-4">Discount</span> ₹00.00</p>
                            </div>

                            <div class="d-flex justify-content-between mb-5">
                                <p class="text-muted mb-0">Order Id : {{_id}}</p>
                                <p class="text-muted mb-0"><span class="fw-bold me-4">Delivery Charges</span> Free</p>
                            </div>
                        </div>
                        <div class="card-footer border-0 px-4 py-5"
                        style="background-color: #000000; border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;">
                        <h5 class="d-flex align-items-center justify-content-end text-white text-uppercase mb-0">Total
                            Amount to be paid : <span class="h2 mb-0 ms-2">₹{{total}}</span></h5>
                    </div>
                        
                    </div>
                    
                </div>
            {{!-- </div> --}}
        {{!-- </div> --}}
        {{/each}}
{{!-- </div> --}}
               
            </div>
        </div>
    </div>