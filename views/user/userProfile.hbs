<div class="container emp-profile">
    <form action="/userProfilePost" method="post" id="postForm">
        <div class="row">
            <div class="col-md-4">
                 <div class="profile-img">
                    <img id="profile-image" src="{{userProfile.image}}"
                        alt=""/>
                    <div class="file btn btn-lg btn-primary">
                        Change Photo
                        <input id="file-input" type="file" name="file" onchange="uploadProfileImage(event)"/>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="profile-head">
                    <h5>{{userName}}</h5>
                    <h6 class="pt-3">Our valuable customer</h6>
                    <ul class="nav nav-tabs mt-5" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab"
                                aria-controls="home" aria-selected="true">Profile</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-md-2">
                <span class="btn btn primary" onclick="editProfile()">Edit Profile</span>

                <span class="btn btn primary" onclick=" return validateForm()">Save Changes</span>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="profile-work">
                    <a href="/orders">My Orders</a><br>
                    <p>Account Settings</p>
                    <a href="">Profile Informations</a><br />
                    <a href="/userManageAddress">Manage Addresses</a><br>
                    <a href="/wallet">Wallet</a><br />
                    <p>Collection</p>
                    <a href="/wishlist">My Wishlist</a><br />
                    <a href="/cart">Cart</a><br />
                </div>
            </div>
            {{#if userDetailes}}
            <div class="col-md-8">
                <div class="tab-content profile-tab" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <div class="row">
                            <div class="col-md-6">
                                <label>User Id</label>

                            </div>
                            <div class="col-md-6">
                                <input type="text" id="user-id" value="{{userDetailes._id}}" disabled>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 pt-3">
                                <label for="name">Name</label>
                            </div>
                            <div class="col-md-6 pt-3">
                                <input type="text" id="name" class="edit-field" name="name" 
                                    value="{{userDetailes.name}}"  placeholder="" onkeyup="validateName()"disabled>
                                      <label class="text-danger" id="nameError"></label>
                                    
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 pt-3">
                                <label for="email">Email</label>
                            </div>
                            <div class="col-md-6 pt-3">
                                <input type="text" id="email" class="edit-field" name="email" 
                                    value="{{userDetailes.email}}"  placeholder="" onkeyup="validateEmail()"disabled>
                                    <label class="text-danger" id="emailError"></label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 pt-3">
                                <label for="phone">Phone</label>
                            </div>
                            <div class="col-md-6 pt-3">
                                <input type="tel" id="phone" class="edit-field" name="phone" maxlength="10"
                                    value="{{userDetailes.phone}}" onkeyup="validatePhone()" disabled>
                                     <label class="text-danger" id="phoneError"></label>
                            </div>
                        </div>
                       
                        <div class="row">
                            <div class="col-md-6 pt-3">
                                <label for="phone">Old Password</label>
                            </div>
                            <div class="col-md-6 pt-3">
                                <input type="text" class="edit-field" id="phone" name="oldPassword"
                                    placeholder="Old Password">
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 pt-3">
                                <label for="phone">New Password</label>
                            </div>
                            <div class="col-md-6 pt-3">
                                <input type="text" class="edit-field" id="newPassword" name="newPassword"
                                    placeholder="New Password" onkeyup="validatePassword()">
                                <label class="text-danger" id="newPassErr"></label>
                            </div>
                            <div class="d-flex justify-content-center col-md-10">
                                <label class="text-danger mt-3">{{passErr}}</label>
                                <label class="text-danger mt-3" id="submitError"></label>
                            </div>
                        </div>


                    </div>

                </div>
            </div>
            {{/if}}
        </div>
</div>
</form>
</div>

<script>
    var newPassErr = document.getElementById('newPassErr');
    var submitError = document.getElementById('submitError');
    var nameError = document.getElementById('nameError');
    var emailError = document.getElementById('emailError');
    var phoneError = document.getElementById('phoneError');

    function validateName() {
        var name = document.getElementById('name').value;
        var nameChecker = /^[a-zA-Z]+(([',. -][a-zA-Z ])?[a-zA-Z])$/;

        if (name.length < 1) {
            nameError.innerHTML = 'Please enter your name';
            return false;
        }
        if (name.match(nameChecker)) {
            nameError.innerHTML = '';
            return true;
        } else {
            nameError.innerHTML = 'Please enter a valid name';
            return false;
        }
    }

    function validatePassword() {
        var newPassword = document.getElementById('newPassword').value;
        var passChecker = /^(?=.\d)(?=.[a-z])(?=.[A-Z])(?=.[!@#$%^&*]).{8,}$/;

        if (newPassword.length < 1) {
            return true;
        }
        if (newPassword.match(passChecker)) {
            newPassErr.innerHTML = '';
            return true;
        } else {
            newPassErr.innerHTML = 'required 6-20 character,1 numeric digit, 1 uppercase and 1 lowercase';
            return false;
        }
    }

    function validateEmail() {
        var email = document.getElementById('email').value;
        var emailChecker = /^([\w-\.]+@([\w-]+\.)+[\w-]{2,4})?$/;

        if (email.length < 1) {
            emailError.innerHTML = 'Please enter your email';
            return false;
        }
        if (email.match(emailChecker)) {
            emailError.innerHTML = '';
            return true;
        } else {
            emailError.innerHTML = 'Please enter a valid email';
            return false;
        }
    }

    function validatePhone() {
        var phone = document.getElementById('phone').value;
        var phoneChecker = /^[0-9]{10}$/;

        if (phone.length < 1) {
            phoneError.innerHTML = 'Please enter your phone number';
            return false;
        }
        if (phone.match(phoneChecker)) {
            phoneError.innerHTML = '';
            return true;
        } else {
            phoneError.innerHTML = 'Please enter a valid 10-digit phone number';
            return false;
        }
    }

    function validateForm() {
        if (!validateName() || !validatePassword() || !validateEmail() || !validatePhone()) {
            submitError.innerHTML = 'Please fix all errors to submit';
            setTimeout(() => {
                submitError.style.display = 'none';
            }, 3000);
            return false;
        } else {
            submit();
        }
    }

    function editProfile() {
        const editClass = document.querySelectorAll('.edit-field');
        editClass.forEach(element => {
            element.removeAttribute('disabled');
        });

    }
    function submit() {
        const editClass = document.querySelectorAll('.edit-field');
        editClass.forEach(element => {
            element.removeAttribute('disabled');
        });
        const field = document.getElementById('user-id');

        document.getElementById('postForm').submit();
    }

</script>

<script>

  function uploadProfileImage(event) {
  var file = event.target.files[0];
  var formData = new FormData();
  formData.append('file', file);

  return new Promise((resolve, reject) => {
    $.ajax({
      url: '/uploadProfileImage',
      type: 'POST',
      data: formData,
      processData: false,
      contentType: false,
      success: function(response) {
        if (response.status === true) {
          var imageUrl = response.data;
          document.getElementById('profile-image').src = imageUrl;
          resolve(imageUrl);
        } else {
          reject(new Error('Error: no image found'));
        }
      },
      error: function(err) {
        reject(err);
      }
    });
  });
}



</script>