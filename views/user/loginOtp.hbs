<section>
    <div class="container-fluid container">
        <div class="row">
          <div class="col-12 text-black">
                 <div class="d-flex justify-content-center mt-4">
                    <form
                        style="width: 23rem;"
                        class="mt-5"
                        action="/otpLoginPagePost"
                        method="post"
                    >
                        <h3
                            class="fw-normal mb-3"
                            style="letter-spacing: 1px;"
                        >Log in</h3>
                        <div class="form-outline mb-4">
                            <input
                                type="tel"
                                id="form2Example18"
                                class="form-control form-control-lg"
                                maxlength="10"
                                name="phone"
                            />
                            <label class="form-label" for="form2Example18">Enter
                                your phone No</label>
                        </div>
                        {{#if phonErr}}
                            <label class="text-danger">{{phonErr}}</label>
                        {{/if}}
                        <div class="pt-1 mb-4">
                            <button
                                class="btn btn-info btn-lg btn-block"
                                type="submit"
                            >Submit for OTP</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>